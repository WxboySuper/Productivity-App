{
  "name": "productivity",
  "version": "0.1.1",
  "description": "Task Management Application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder --dir",
    "release": "electron-builder --publish always",
    "prebuild": "node scripts/prepare-python-deps.js"
  },
  "keywords": [],
  "author": "WeatherboySuper",
  "license": "ISC",
  "dependencies": {
    "electron-log": "^5.2.2",
    "electron-squirrel-startup": "^1.0.1",
    "python-shell": "^5.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@electron/fuses": "^1.8.0",
    "cross-env": "^7.0.3",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "jest": "^29.7.0"
  },
  "build": {
    "asar": true,
    "generateUpdatesFilesForAllChannels": true,
    "win": {
      "publish": "github",
      "target": "nsis"
    },
    "files": [
      "src/**/*",
      "!src/python/**/*"
    ],
    "extraResources": [
      {
        "from": "src/python",
        "to": "python",
        "filter": ["**/*"]
      },
      {
        "from": "python-packages",
        "to": "python/lib/site-packages"
      }
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    }
  }
}
